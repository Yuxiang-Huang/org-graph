{
  "name": "@graph/server",
  "version": "0.0.0",
  "dependencies": {
    "@tsoa/runtime": "^7.0.0-alpha.0",
    "better-auth": "^1.4.18",
    "cors": "^2.8.6",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "jwks-rsa": "^3.2.2",
    "pg": "^8.18.0",
    "swagger-ui-dist": "^5.31.0",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^7.0.0-alpha.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.16.0",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "onchange": "^7.1.0",
    "openapi-typescript": "^7.10.1"
  },
  "module": "index.ts",
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "private": true,
  "scripts": {
    "build": "bun build src/server.ts --outdir=dist --target=bun --sourcemap",
    "check": "tsc && biome check",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "dev": "concurrently 'bun run server' 'bun run tsoa:watch' 'bun run openapi:watch'",
    "format": "biome format",
    "generate": "bun run tsoa && bun run openapi",
    "lint": "biome lint",
    "openapi": "openapi-typescript ./build/swagger.yaml -o ./build/swagger.d.ts",
    "openapi:watch": "onchange './build/swagger.yaml' -- bun run openapi",
    "server": "dotenv -e .env -- bun run --watch src/server.ts",
    "start": "bun dist/server.js",
    "tsc": "tsc",
    "tsoa": "tsoa spec-and-routes",
    "tsoa:watch": "onchange 'src/controllers/*.ts' 'tsoa.json' -- bun run tsoa"
  },
  "type": "module"
}
